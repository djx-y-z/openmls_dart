#!/bin/bash
#
# Pre-commit hook for openmls
#
# Runs format check and static analysis before each commit.
# To skip this hook, use: git commit --no-verify
#

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-commit checks...${NC}"

# Check formatting
echo -e "\n${YELLOW}[1/3] Checking code formatting...${NC}"
if make format-check; then
    echo -e "${GREEN}Formatting check passed.${NC}"
else
    echo -e "${RED}Formatting check failed.${NC}"
    echo -e "${YELLOW}Run 'make format' to fix formatting issues.${NC}"
    exit 1
fi

# Check Rust code
echo -e "\n${YELLOW}[2/3] Checking Rust code...${NC}"
if make rust-check; then
    echo -e "${GREEN}Rust check passed.${NC}"
else
    echo -e "${RED}Rust check failed.${NC}"
    echo -e "${YELLOW}Fix the Rust errors above before committing.${NC}"
    exit 1
fi

# Run static analysis
echo -e "\n${YELLOW}[3/3] Running static analysis...${NC}"
if make analyze ARGS="--fatal-infos"; then
    echo -e "${GREEN}Static analysis passed.${NC}"
else
    echo -e "${RED}Static analysis failed.${NC}"
    echo -e "${YELLOW}Fix the issues above before committing.${NC}"
    exit 1
fi

echo -e "\n${GREEN}All pre-commit checks passed!${NC}"
